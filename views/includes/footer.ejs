<script src="/public/js/jquery-3.3.1.min.js"></script>
<script src="/public/js/script.js"></script>
<script src="/public/js/main.min.js"></script>
<script src="/public/js/socket.io.js"></script>

<script>

window.user = null;

function getUserMentor() {

    if (localStorage.getItem("accessToken")) {

        var ajax = new XMLHttpRequest();
        ajax.open("POST", "/getUserMentor", true);

        ajax.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {

                var response = JSON.parse(this.responseText);

                if (response.status == "success") {
                    window.user = response.data;

                    if (typeof isUpdateProfile !== "undefined" && isUpdateProfile) {
                        showProfileData();
                    }

                    if (typeof isAllProjectsPage !== "undefined" && isAllProjectsPage) {
                        showprojectsfeed();
                    }

                    if (typeof isStudentProposalsPage !== "undefined" && isStudentProposalsPage) {
                        showstudentproposalsfeed();
                    }

                    if (typeof isAddProjectPage !== "undefined" && isAddProjectPage) {
                        showAddproject();
                    }

                    if (typeof isMyProjects !== "undefined" && isMyProjects) {
                        showCompletedApplicationsfeed();
                        showPendingApplicationsfeed();
                    }

                    if (typeof isGrading !== "undefined" && isGrading) {
                        showGradingfeed(); 
                    }

                } else {
                    localStorage.removeItem("accessToken");
                }
                showMainMenu();
            }
        };

        var formData = new FormData();
        formData.append("accessToken", localStorage.getItem("accessToken"));
        ajax.send(formData);
    } else {
        showMainMenu();
    }
}

function showMainMenu() {
    var html = "";

    if (localStorage.getItem("accessToken")) {
        html += '<li>';
            html += '<a href="/allProjectsMentor">All projects</a> ';
        html += '</li>';

        html += '<li>';
            html += '<a href="/student_proposals">Student proposals</a> ';
        html += '</li>';

        html += '<li>';
            html += '<a href="/my_projects">My projects</a> ';
        html += '</li>';

        html += '<li>';
            html += '<a href="/grading">Grading</a> ';
        html += '</li>';

        html += '<li>';
            html += '<a href="/updateProfileMentor">Profile</a>';
        html += '</li>';

        html += '<li>';
            html += '<a href="/logoutMentor" onclick="return doLogoutMentor();">Logout</a>';
        html += '</li>';
    } else {
        html += '<li>';
            html += '<a href="/loginMentor">Login</a>';
        html += '</li>';

        html += '<li>';
            html += '<a href="/signupMentor">Signup</a>';
        html += '</li>';
    }

    document.getElementById("main-menu").innerHTML = html;
}

function doLogoutMentor() {
    localStorage.removeItem("accessToken");
    return true;
}

window.onload = function () {
    getUserMentor();
};

window.onerror = function (file, line, error) {
    alert(file + " " + line + " " + error);
};
</script>

